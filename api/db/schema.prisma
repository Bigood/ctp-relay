datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Instance {
  host      String   @id
  secret    String
  version   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages  Message[] @relation("MessagesFromInstance")
  messagesDelivered  Message[] @relation("MessagesDeliveredToInstance")
}

model Message {
  id        Int      @id @default(autoincrement())
  payload   Json

  from      Instance @relation("MessagesFromInstance", fields: [instanceId], references: [host])
  instanceId String

  deliveredTo Instance[] @relation("MessagesDeliveredToInstance")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
